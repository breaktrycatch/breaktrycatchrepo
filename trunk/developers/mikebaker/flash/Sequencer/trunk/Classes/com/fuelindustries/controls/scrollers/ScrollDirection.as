package com.fuelindustries.controls.scrollers
{
	/**
	 * A static class that contains the values for scroll direction.
	 * These values tell the scrollbar whether they are vertical or horizontal scrollers
	 * @see Scrollbar#scrollDirection
	 */
	public class ScrollDirection
	{
		
		/**
		 * Scroll vertical
		 */
		public static const VERTICAL:String = "vertical";
		/**
		 * Scroll horizontal
		 */
		public static const HORIZONTAL:String = "horizontal";
	}
}