<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/halo" height="20">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Metadata>
		[HostComponent("spark.components.TextInput")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states> 
		<s:State name="normal" />
		<s:State name="over" />
	</s:states>
	
	<s:Rect id="rect" radiusX="{getStyle('cornerRadius')}" radiusY="{getStyle('cornerRadius')}" top="0" right="0" bottom="0" left="0">
		<s:fill>
			<s:SolidColor color="{getStyle('outColor')}" color.over="{getStyle('overColor')}" color.normal="{getStyle('outColor')}"/>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke  alpha="{getStyle('borderAlpha')}" color="{getStyle('borderColor')}" weight="{getStyle('borderWeight')}"/>
		</s:stroke>
	</s:Rect>
</s:Skin>
